pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/yourusername/yourrepository.git'
            }
        }
        stage('Test') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'pytest'
            }
        }
        stage('Deploy') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'uvicorn main:app --host 0.0.0.0 --port 8000'
            }
        }
    }
}

